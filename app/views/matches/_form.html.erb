<%= form_for([@wrestler, @match]) do |f| %>
  <fieldset>
    <div class="control-group">
      <%= f.label :match_date, class: "control-label" %>
      <div class="controls">
        <%= f.date_select(:match_date, { :prompt => { :day => "Select day", :month => "Select month", :year => "Select year" }, :order => [:day, :month, :year] }, class: "input-medium") %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :opponents_first_name, class: "control-label" %>
      <div class="controls">
        <%= f.text_field :opp_first_name %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :opponents_last_name, class: "control-label" %>
      <div class="controls">
        <%= f.text_field :opp_last_name %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :school, class: "control-label" %>
      <div class="controls">
        <%= f.text_field :school %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :tournament, class: "control-label" %>
      <div class="controls">
        <%= f.text_field :tournament %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :result, 'Result (W/L)', class: "control-label" %>
      <div class="controls">
        <%= f.select :result, [['Win', 'win'], ['Lose', 'lose']], {:include_blank => true, :defualt => nil}, class: "input-small" %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit class: "btn btn-large btn-primary"%>
    </div>
  </fieldset>
<% end %>