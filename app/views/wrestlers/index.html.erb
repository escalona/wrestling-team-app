<h1>Team Roster</h1>
<h3>Total Wrestlers = <%= @wrestlers.count %></h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Height (Inches)</th>
      <th>Weight</th>
      <th>Class</th>
    </tr>
  </thead>
  <tbody>
    <% @wrestlers.each do |wrestler| %>
      <tr>
        <td><%= link_to wrestler.first_name.capitalize, wrestler %></a></td>
        <td><%= wrestler.last_name.capitalize %></td>
        <td><%= wrestler.height %>"</td>
        <td><%= wrestler.weight %></td>
        <td><%= wrestler.year %></td>
      </tr>
    <% end %>
  </tbody>
</table>