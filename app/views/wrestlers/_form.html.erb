<%= form_for(@wrestler) do |f| %>
  <fieldset>
    <div class="control-group">
      <%= f.label :first_name, class: "control-label" %>
      <div class="controls">
        <%= f.text_field :first_name %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :last_name, class: "control-label" %>
      <div class="controls">
        <%= f.text_field :last_name %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :height, class: "control-label" %>
      <div class="controls">
        <%= f.select :height, @height_input, {:include_blank => true, :default => nil}, class: 'input-small' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :weight, "Weight (lbs)", class: "control-label" %>
      <div class="controls">
        <%= f.text_field :weight, class: "input-small" %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :class, "Class (Graduating Year)", class: "control-label" %>
      <div class="controls">
        <%= f.select :year, @graduating_year, {:include_blank => true, :default => nil}, class: "input-small" %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit class: "btn btn-primary"%>
    </div>
  </fieldset>
<% end %>